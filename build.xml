<project name="s3 Upload" default="run" basedir=".">
  <path id="aws.java.sdk.classpath">
    <fileset dir="./s3upload/WebContent/WEB-INF/lib" includes="**/*.jar"/>
    <pathelement location="lib"/>
    <pathelement location="."/>
  </path>

  <target name="build">
  <javac debug="true"
    includeantruntime="false"
    srcdir="."
    destdir="."
    classpathref="aws.java.sdk.classpath"/>
  </target>

  <target name="test" depends="build">
    <java classname="./s3upload/WebContent/upload.jsp" classpathref="aws.java.sdk.classpath" fork="true"/>
  </target>
</project>